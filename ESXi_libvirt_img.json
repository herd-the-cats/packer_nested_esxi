{
  "variables": {
    "packer_rootpw": "{{env `PACKWRAP_ROOTPW_PLAIN`}}",
    "esxi_vm_version": "6.0",
    "esxi_iso_file": "VMware-VMvisor-Installer-6.0.0.update03-5050593.x86_64.iso",
    "esxi_iso_checksum": "e17586a163b8e32b977b8d0e1c98d3c36fe4e1421b2dc590bab38703db8bf21e"
  },
  "builders": [
    {
      "type": "qemu",
      "name": "libvirt-esxi",
      "boot_command": [
        "<enter><wait>O<wait> ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/esxi{{user `esxi_vm_version`}}_template.ks packer_ks_rootpw={{user `crypted_rootpw`}}<enter>"
      ],
      "shutdown_command": "esxcli system maintenanceMode set -e true -t 0 ; esxcli system shutdown poweroff -d 10 -r 'Packer Shutdown' ; esxcli system maintenanceMode set -e false -t 0",
      "boot_wait": "3s",
      "iso_url": "{{user `esxi_iso_file`}}",
      "iso_checksum": "{{user `esxi_iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "output_directory": "output-esxi{{user `esxi_vm_version`}}-img",
      "disk_size": "100000",
      "disk_cache": "none",
      "disk_discard": "unmap",
      "format": "raw",
      "headless": false,
      "accelerator": "kvm",
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "{{user `packer_rootpw`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "3000s",
      "vm_name": "ESXi-{{user `esxi_vm_version`}}-x86-64-{{isotime \"2006-01-02\"}}.raw",
      "net_device": "e1000",
      "disk_interface": "ide",
      "qemu_binary": "qemu-kvm",
      "qemuargs": [
        [ "-m", "8192M" ],
        [ "-machine", "q35,vmport=off" ],
        [ "-cpu", "Broadwell,+vmx" ],
        [ "-smp", "cpus=2,cores=1" ],
        [ "-net", "none" ]
      ]
    }
  ]
}
